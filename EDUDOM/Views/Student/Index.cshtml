@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil del Estudiante - Sistema EDUDOM</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #F5F5F5;
            color: #333;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #046BCD;
            color: #FFFFFF;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.2);
            overflow-y: auto;
        }

            .sidebar .logo {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
                color: #FFFFFF;
            }

            .sidebar a {
                display: block;
                color: #FFFFFF;
                padding: 10px;
                text-decoration: none;
                font-size: 16px;
                border-radius: 4px;
                transition: background 0.3s ease, color 0.3s ease;
            }

                .sidebar a:hover {
                    background: #FFFFFF;
                    color: #046BCD;
                }

        .header {
            position: fixed;
            top: 0;
            left: 250px;
            width: calc(100% - 250px);
            background: #046BCD;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            z-index: 1000;
            color: #FFFFFF;
        }

            .header .logo {
                font-size: 24px;
                font-weight: bold;
            }

            .header .search-bar input {
                padding: 8px;
                border: 1px solid #D3D3D3;
                border-radius: 4px;
                width: 300px;
            }

            .header .notifications, .header .user-avatar, .header .date-time {
                margin-left: 20px;
            }

                .header .notifications .icon {
                    font-size: 20px;
                    color: #FFFFFF;
                }

                .header .user-avatar img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    border: 2px solid #FFFFFF;
                }

            .header .date-time {
                font-size: 16px;
            }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            padding-top: 80px;
        }

        .profile-section {
            background: #FFFFFF;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

            .profile-section h2 {
                margin-bottom: 20px;
            }

            .profile-section .profile-header {
                display: flex;
                align-items: center;
                border-bottom: 1px solid #ddd;
                padding-bottom: 20px;
                margin-bottom: 20px;
                position: relative;
            }

                .profile-section .profile-header img {
                    width: 120px;
                    height: 120px;
                    border-radius: 50%;
                    border: 4px solid #046BCD;
                    margin-right: 20px;
                }

                .profile-section .profile-header .profile-info {
                    font-size: 18px;
                }

                    .profile-section .profile-header .profile-info h3 {
                        margin: 0;
                        color: #046BCD;
                    }

                    .profile-section .profile-header .profile-info p {
                        margin: 5px 0;
                        color: #555;
                    }

                .profile-section .profile-header .change-photo {
                    position: absolute;
                    top: 20px;
                    right: 20px;
                }

                    .profile-section .profile-header .change-photo input[type="file"] {
                        display: none;
                    }

                    .profile-section .profile-header .change-photo label {
                        background: #046BCD;
                        color: #FFFFFF;
                        padding: 8px 12px;
                        border-radius: 4px;
                        cursor: pointer;
                    }

            .profile-section .profile-details {
                display: flex;
                flex-wrap: wrap;
                gap: 20px;
            }

                .profile-section .profile-details .profile-detail {
                    flex: 1;
                    min-width: 250px;
                    background: #F5F5F5;
                    padding: 15px;
                    border-radius: 8px;
                    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
                }

                    .profile-section .profile-details .profile-detail h4 {
                        margin-bottom: 10px;
                        color: #046BCD;
                    }

                    .profile-section .profile-details .profile-detail p {
                        margin: 5px 0;
                    }

                    .profile-section .profile-details .profile-detail .grades-table {
                        width: 100%;
                        border-collapse: collapse;
                    }

                        .profile-section .profile-details .profile-detail .grades-table th,
                        .profile-section .profile-details .profile-detail .grades-table td {
                            border: 1px solid #ddd;
                            padding: 8px;
                        }

                        .profile-section .profile-details .profile-detail .grades-table th {
                            background: #046BCD;
                            color: #FFFFFF;
                        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">Sistema EDUDOM</div>
        <a href="/Home" class="nav-link"><i class="fas fa-home"></i>Inicio</a>
        <a href="/Profile" class="nav-link"><i class="fas fa-user"></i>Perfil</a>
        <a href="/Assignment/Index" class="nav-link"><i class="fas fa-tasks"></i>Tareas</a>
        <a href="/Cours/Index" class="nav-link"><i class="fas fa-chalkboard-teacher"></i>Aulas</a>
        <a href="/Qualifications/Index" class="nav-link"><i class="fas fa-star"></i>Calificaciones</a>
        <a href="/Attendance/Index" class="nav-link"><i class="fas fa-user-check"></i>Registro de Asistencia</a>
        <a href="/Reports/Index" class="nav-link"><i class="fas fa-chart-line"></i>Informe de Progreso</a>
        <a href="/Employeer/Index" class="nav-link"><i class="fas fa-users"></i>Empleados</a>
        <a href="/Department/Index" class="nav-link"><i class="fas fa-building"></i>Departamentos</a>
        <a href="/Distric/Index" class="nav-link"><i class="fas fa-map-marker-alt"></i>Distritos</a>
        <a href="/Province/Index" class="nav-link"><i class="fas fa-map"></i>Provincias</a>
        <a href="/School/Index" class="nav-link"><i class="fas fa-school"></i>Escuelas</a>
        <a href="/Subject/Index" class="nav-link"><i class="fas fa-book"></i>Asignaturas</a>
        <a href="/Schedule" class="nav-link"><i class="fas fa-calendar-alt"></i>Horario</a>
        <a href="/Messages" class="nav-link"><i class="fas fa-envelope"></i>Mensajes</a>
        <a href="Home/Supports" class="nav-link"><i class="fas fa-life-ring"></i>Soporte</a>
        <button class="btn-close" onclick="goToLogin()">Cerrar Sección</button>
    </div>
    <div class="header">
        <div class="logo">Sistema EDUDOM</div>
        <div class="search-bar">
            <input type="text" placeholder="Buscar...">
        </div>
        <div class="notifications">
            <i class="fas fa-bell icon"></i>
        </div>
        <div class="user-avatar">
            <img src="https://i.imgur.com/QwhZRyL.png" alt="Avatar">
        </div>
        <div class="date-time">
            <span id="currentDateTime"></span>
        </div>
    </div>
    <div class="main-content">
        <div class="profile-section">
            <h2>Perfil del Estudiante</h2>
            <div class="profile-header">
                <img src="https://i.imgur.com/QwhZRyL.png" alt="Perfil del Estudiante" id="profilePhoto">
                <div class="profile-info">
                    <h3>Nombre Completo</h3>
                    <p><strong>ID Estudiante:</strong> 123456</p>
                    <p><strong>Fecha de Nacimiento:</strong> 01/01/2000</p>
                    <p><strong>Grado Actual:</strong> 10º Grado</p>
                    <p><strong>Sección:</strong> A</p>
                </div>
                <div class="change-photo">
                    <input type="file" id="photoUpload" accept="image/*">
                    <label for="photoUpload">Cambiar Foto</label>
                </div>
            </div>
            <div class="profile-details">
                <div class="profile-detail">
                    <h4>Información de Contacto</h4>
                    <p><strong>Correo Electrónico:</strong> estudiante@example.com</p>
                    <p><strong>Teléfono:</strong> +123 456 789</p>
                </div>
                <div class="profile-detail">
                    <h4>Dirección</h4>
                    <p>Calle Ejemplo, 123</p>
                    <p>Ciudad, País</p>
                </div>
                <div class="profile-detail">
                    <h4>Asistencia</h4>
                    <p><strong>Días Asistidos:</strong> 120</p>
                    <p><strong>Días Faltados:</strong> 5</p>
                </div>
                <div class="profile-detail">
                    <h4>Notas</h4>
                    <table class="grades-table">
                        <thead>
                            <tr>
                                <th>Periodo</th>
                                <th>Nota</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr><td>Periodo 1</td><td>8.5</td></tr>
                            <tr><td>Periodo 2</td><td>7.0</td></tr>
                            <tr><td>Periodo 3</td><td>9.2</td></tr>
                            <tr><td>Periodo 4</td><td>8.0</td></tr>
                            <tr><td>Periodo 5</td><td>7.8</td></tr>
                            <tr><td>Periodo 6</td><td>8.6</td></tr>
                            <tr><td>Periodo 7</td><td>9.0</td></tr>
                            <tr><td>Periodo 8</td><td>7.5</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
        function updateDateTime() {
            const now = new Date();
            const options = { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit' };
            document.getElementById('currentDateTime').textContent = now.toLocaleDateString('es-ES', options);
        }
        setInterval(updateDateTime, 1000); // Actualizar cada segundo

        document.getElementById('photoUpload').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('profilePhoto').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>
