@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Asistencia - Sistema EDUDOM</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #F5F5F5;
            color: #333;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #046BCD;
            color: #FFFFFF;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.2);
            overflow-y: auto;
        }

            .sidebar .logo {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
                color: #FFFFFF;
            }

            .sidebar a {
                display: block;
                color: #FFFFFF;
                padding: 10px;
                text-decoration: none;
                font-size: 16px;
                border-radius: 4px;
                transition: background 0.3s ease, color 0.3s ease;
            }

                .sidebar a:hover {
                    background: #FFFFFF;
                    color: #046BCD;
                }

            .sidebar .btn-close {
                background-color: #FF4D4D;
                color: #FFFFFF;
                border: none;
                padding: 10px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 16px;
                text-align: center;
                transition: background-color 0.3s ease;
                margin-top: 20px;
            }

                .sidebar .btn-close:hover {
                    background-color: #CC0000;
                }

        .header {
            position: fixed;
            top: 0;
            left: 250px;
            width: calc(100% - 250px);
            background: #046BCD;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            z-index: 1000;
            color: #FFFFFF;
        }

            .header .logo {
                font-size: 24px;
                font-weight: bold;
            }

            .header .search-bar input {
                padding: 8px;
                border: 1px solid #D3D3D3;
                border-radius: 4px;
                width: 300px;
            }

            .header .notifications, .header .user-avatar, .header .date-time {
                margin-left: 20px;
            }

                .header .notifications .icon {
                    font-size: 20px;
                    color: #FFFFFF;
                }

                .header .user-avatar img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    border: 2px solid #FFFFFF;
                }

            .header .date-time {
                font-size: 16px;
            }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            padding-top: 80px;
        }

        .form-section, .table-section {
            background: #FFFFFF;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            margin-bottom: 20px;
        }

            .form-section h2, .table-section h2 {
                margin-bottom: 20px;
            }

        .form-group label {
            font-weight: bold;
        }

        .btn-save {
            background-color: #046BCD;
            color: #FFFFFF;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

            .btn-save:hover {
                background-color: #0359a8;
            }

        .table-section {
            overflow-x: auto;
        }

            .table-section table {
                width: 100%;
                border-collapse: collapse;
            }

            .table-section th, .table-section td {
                padding: 10px;
                text-align: center;
                border-bottom: 1px solid #ddd;
            }

            .table-section th {
                background-color: #046BCD;
                color: #FFFFFF;
            }

            .table-section tr:hover {
                background-color: #f5f5f5;
            }

        .attendance-checkbox {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .attendance-checkbox label {
                margin-right: 10px;
            }

        .student-list {
            display: flex;
            flex-direction: column;
        }

        .student-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

            .student-item:last-child {
                border-bottom: none;
            }

        .calendar-day input[type="checkbox"] {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">Sistema EDUDOM</div>
        <a href="/Home" class="nav-link"><i class="fas fa-home"></i>Inicio</a>
        <a href="/Profile" class="nav-link"><i class="fas fa-user"></i>Perfil</a>
        <a href="/Assignment/Index" class="nav-link"><i class="fas fa-tasks"></i>Tareas</a>
        <a href="/Cours/Index" class="nav-link"><i class="fas fa-chalkboard-teacher"></i>Aulas</a>
        <a href="/Qualifications/Index" class="nav-link"><i class="fas fa-star"></i>Calificaciones</a>
        <a href="/Attendance/Index" class="nav-link"><i class="fas fa-user-check"></i>Registro de Asistencia</a>
        <a href="/Reports" class="nav-link"><i class="fas fa-chart-line"></i>Informe de Progreso</a>
        <a href="/Employeer/Index" class="nav-link"><i class="fas fa-users"></i>Empleados</a>
        <a href="/Department/Index" class="nav-link"><i class="fas fa-building"></i>Departamentos</a>
        <a href="/Distric/Index" class="nav-link"><i class="fas fa-map-marker-alt"></i>Distritos</a>
        <a href="/Province/Index" class="nav-link"><i class="fas fa-globe"></i>Provincias</a>
        <a href="/School/Index" class="nav-link"><i class="fas fa-school"></i>Escuelas</a>
        <a href="/Subject/Index" class="nav-link"><i class="fas fa-book"></i>Asignaturas</a>
        <a href="/Schedule" class="nav-link"><i class="fas fa-calendar-alt"></i>Horario</a>
        <a href="/Messages" class="nav-link"><i class="fas fa-envelope"></i>Mensajes</a>
        <a href="Home/Supports" class="nav-link"><i class="fas fa-life-ring"></i>Soporte</a>
        <button class="btn-close" onclick="closeSection()">Cerrar Sección</button>
    </div>
    <div class="header">
        <div class="logo">Sistema EDUDOM</div>
        <div class="search-bar">
            <input type="text" placeholder="Buscar...">
        </div>
        <div class="notifications">
            <i class="fas fa-bell icon"></i>
        </div>
        <div class="user-avatar">
            <img src="https://i.imgur.com/QwhZRyL.png" alt="Avatar">
        </div>
        <div class="date-time">
            <span id="currentDateTime"></span>
        </div>
    </div>
    <div class="main-content">
        <div class="form-section">
            <h2>Registro de Asistencia</h2>
            <form method="post" action="/SaveAttendance">
                <div class="form-group">
                    <label for="section">Seleccionar Sección</label>
                    <select id="section" name="section" class="form-control" onchange="updateStudentList()" required>
                        <option value="">Seleccionar sección</option>
                        <option value="A">Sección A</option>
                        <option value="B">Sección B</option>
                        <!-- Agregar más secciones aquí -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="date">Fecha</label>
                    <input type="date" id="date" name="date" class="form-control" required>
                </div>
                <div class="student-list" id="studentListContainer">
                    <!-- Las listas de estudiantes se mostrarán aquí -->
                </div>
                <button type="submit" class="btn-save">Guardar Asistencia</button>
            </form>
        </div>
    </div>
    <script>
        // Script para mostrar la fecha y hora actual
        function updateDateTime() {
            var now = new Date();
            var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' };
            document.getElementById('currentDateTime').innerText = now.toLocaleDateString('es-ES', options);
        }
        updateDateTime();
        setInterval(updateDateTime, 1000);

        // Script para cerrar la sección
        function closeSection() {
            document.querySelector('.sidebar').style.display = 'none';
            document.querySelector('.header').style.marginLeft = '0';
            document.querySelector('.main-content').style.marginLeft = '0';
        }

        // Script para actualizar la lista de estudiantes según la sección seleccionada
        function updateStudentList() {
            const section = document.getElementById('section').value;
            const container = document.getElementById('studentListContainer');

            const sections = {
                'A': [
                    { name: 'Juan Pérez' },
                    { name: 'Maria López' }
                    // Más estudiantes aquí
                ],
                'B': [
                    { name: 'Pedro Sánchez' },
                    { name: 'Laura Fernández' }
                    // Más estudiantes aquí
                ]
            };

            if (section in sections) {
                let html = '';
                sections[section].forEach(student => {
                    html += `
                                <div class="student-item">
                                    <label>${student.name}</label>
                                    <div class="attendance-checkbox">
                                        <input type="checkbox" name="attendance_${student.name.replace(/\s+/g, '_').toLowerCase()}" value="presento"> Asistencia
                                        <input type="checkbox" name="absence_${student.name.replace(/\s+/g, '_').toLowerCase()}" value="ausente"> Ausente
                                        <input type="checkbox" name="excuse_${student.name.replace(/\s+/g, '_').toLowerCase()}" value="excusa"> Excusa
                                    </div>
                                </div>
                            `;
                });
                container.innerHTML = html;
            } else {
                container.innerHTML = '<p>No hay estudiantes para esta sección.</p>';
            }
        }
    </script>
</body>
</html>
