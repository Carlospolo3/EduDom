@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignar Horario - Sistema EDUDOM</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos generales */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #F5F5F5;
            color: #333;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #046BCD;
            color: #FFFFFF;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.2);
            overflow-y: auto;
            transition: width 0.3s ease;
        }

            .sidebar .logo {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
                color: #FFFFFF;
            }

            .sidebar a {
                display: block;
                color: #FFFFFF;
                padding: 10px;
                text-decoration: none;
                font-size: 16px;
                border-radius: 4px;
                transition: background 0.3s ease, color 0.3s ease;
            }

                .sidebar a:hover {
                    background: #FFFFFF;
                    color: #046BCD;
                }

            .sidebar .btn-close {
                background-color: #FF4D4D;
                color: #FFFFFF;
                border: none;
                padding: 10px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 16px;
                text-align: center;
                transition: background-color 0.3s ease;
                margin-top: 20px;
            }

                .sidebar .btn-close:hover {
                    background-color: #CC0000;
                }

        .header {
            position: fixed;
            top: 0;
            left: 250px;
            width: calc(100% - 250px);
            background: #046BCD;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            z-index: 1000;
            color: #FFFFFF;
        }

            .header .logo {
                font-size: 24px;
                font-weight: bold;
            }

            .header .search-bar input {
                padding: 8px;
                border: 1px solid #D3D3D3;
                border-radius: 4px;
                width: 300px;
            }

            .header .notifications, .header .user-avatar, .header .date-time {
                margin-left: 20px;
            }

                .header .notifications .icon {
                    font-size: 20px;
                    color: #FFFFFF;
                }

                .header .user-avatar img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    border: 2px solid #FFFFFF;
                }

            .header .date-time {
                font-size: 16px;
            }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            padding-top: 80px;
        }

        .form-section {
            background: #FFFFFF;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

            .form-section h2 {
                margin-bottom: 20px;
            }

        .form-group label {
            font-weight: bold;
        }

        .btn-save {
            background-color: #046BCD;
            color: #FFFFFF;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .btn-save:hover {
                background-color: #0359a8;
            }

        .table-section {
            background: #FFFFFF;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

            .table-section h2 {
                margin-bottom: 20px;
            }

            .table-section table {
                width: 100%;
                border-collapse: collapse;
            }

            .table-section th, .table-section td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table-section th {
                background-color: #046BCD;
                color: #FFFFFF;
            }

            .table-section tr:hover {
                background-color: #f5f5f5;
            }

        .btn-add-row, .btn-assign-default, .btn-download-pdf {
            background-color: #046BCD;
            color: #FFFFFF;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
            margin-right: 10px;
        }

            .btn-add-row:hover, .btn-assign-default:hover, .btn-download-pdf:hover {
                background-color: #0359a8;
            }

        .bottom-buttons {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
        }

            .bottom-buttons .btn {
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">Sistema EDUDOM</div>
        <a href="/Home" class="nav-link"><i class="fas fa-home"></i>Inicio</a>
        <a href="/Profile" class="nav-link"><i class="fas fa-user"></i>Perfil</a>
        <a href="/Assignment/Index" class="nav-link"><i class="fas fa-tasks"></i>Tareas</a>
        <a href="/Cours/Index" class="nav-link"><i class="fas fa-chalkboard-teacher"></i>Aulas</a>
        <a href="/Qualifications/Index" class="nav-link"><i class="fas fa-star"></i>Calificaciones</a>
        <a href="/Attendance/Index" class="nav-link"><i class="fas fa-user-check"></i>Registro de Asistencia</a>
        <a href="/Reports" class="nav-link"><i class="fas fa-chart-line"></i>Informe de Progreso</a>
        <a href="/Employeer/Index" class="nav-link"><i class="fas fa-users"></i>Empleados</a>
        <a href="/Department/Index" class="nav-link"><i class="fas fa-building"></i>Departamentos</a>
        <a href="/Distric/Index" class="nav-link"><i class="fas fa-map-marker-alt"></i>Distritos</a>
        <a href="/Province/Index" class="nav-link"><i class="fas fa-globe"></i>Provincias</a>
        <a href="/School/Index" class="nav-link"><i class="fas fa-school"></i>Escuelas</a>
        <a href="/Subject/Index" class="nav-link"><i class="fas fa-book"></i>Asignaturas</a>
        <a href="/Schedule" class="nav-link"><i class="fas fa-calendar-alt"></i>Horario</a>
        <a href="/Messages" class="nav-link"><i class="fas fa-envelope"></i>Mensajes</a>
        <a href="/Support" class="nav-link"><i class="fas fa-life-ring"></i>Soporte</a>
        <button class="btn-close" onclick="goToLogin()">Cerrar Sección</button>
    </div>
    <div class="header">
        <div class="logo">Sistema EDUDOM</div>
        <div class="search-bar">
            <input type="text" placeholder="Buscar...">
        </div>
        <div class="notifications">
            <i class="fas fa-bell icon"></i>
        </div>
        <div class="user-avatar">
            <img src="https://i.imgur.com/QwhZRyL.png" alt="Avatar">
        </div>
        <div class="date-time">
            <span id="currentDateTime"></span>
        </div>
    </div>
    <div class="main-content">
        <div class="form-section">
            <h2>Asignar Horario a Clase</h2>
            <div class="table-section">
                <table id="scheduleTable">
                    <thead>
                        <tr>
                            <th>Hora</th>
                            <th>Lunes</th>
                            <th>Martes</th>
                            <th>Miércoles</th>
                            <th>Jueves</th>
                            <th>Viernes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="text" name="hour1" class="form-control" placeholder="Hora"></td>
                            <td><input type="text" name="monday1" class="form-control" placeholder="Asignar"></td>
                            <td><input type="text" name="tuesday1" class="form-control" placeholder="Asignar"></td>
                            <td><input type="text" name="wednesday1" class="form-control" placeholder="Asignar"></td>
                            <td><input type="text" name="thursday1" class="form-control" placeholder="Asignar"></td>
                            <td><input type="text" name="friday1" class="form-control" placeholder="Asignar"></td>
                        </tr>
                    </tbody>
                </table>
                <div class="bottom-buttons">
                    <button class="btn-add-row" onclick="addRow()">Agregar Fila</button>
                    <button class="btn-assign-default" onclick="assignDefault()">Asignar Automáticamente</button>
                    <button class="btn-save" onclick="updateScheduleView()">Guardar</button>
                </div>
            </div>
        </div>
        <div class="form-section">
            <h2>Vista de Horario</h2>
            <div class="table-section">
                <table id="scheduleViewTable">
                    <thead>
                        <tr>
                            <th>Hora</th>
                            <th>Lunes</th>
                            <th>Martes</th>
                            <th>Miércoles</th>
                            <th>Jueves</th>
                            <th>Viernes</th>
                        </tr>
                    </thead>
                    <tbody id="scheduleViewBody">
                        <!-- Los datos se agregarán aquí -->
                    </tbody>
                </table>
                <button class="btn-download-pdf" onclick="downloadPDF()">Descargar PDF</button>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsPDF/2.5.1/jspdf.umd.min.js"></script>
    <script>
        const subjects = [
            "Matemáticas",
            "Lengua Española",
            "Ciencias Naturales",
            "Ciencias Sociales",
            "Inglés",
            "Francés",
            "Educación Artística",
            "Educación Física",
            "Formación Humana y Religiosa",
            "Informática"
        ];

        let rowCount = 1;

        function addRow() {
            rowCount++;
            const tableBody = document.querySelector("#scheduleTable tbody");
            const rowHTML = `
                        <tr>
                            <td><input type="text" name="hour${rowCount}" class="form-control" placeholder="Hora"></td>
                            <td><input type="text" name="monday${rowCount}" class="form-control" placeholder="Asignar"></td>
                            <td><input type="text" name="tuesday${rowCount}" class="form-control" placeholder="Asignar"></td>
                            <td><input type="text" name="wednesday${rowCount}" class="form-control" placeholder="Asignar"></td>
                            <td><input type="text" name="thursday${rowCount}" class="form-control" placeholder="Asignar"></td>
                            <td><input type="text" name="friday${rowCount}" class="form-control" placeholder="Asignar"></td>
                        </tr>
                    `;
            tableBody.insertAdjacentHTML('beforeend', rowHTML);
        }

        function assignDefault() {
            const rows = document.querySelectorAll("#scheduleTable tbody tr");
            rows.forEach(row => {
                const cells = row.querySelectorAll('td input');
                let subjectIndex = 0;
                cells.forEach((cell, index) => {
                    if (index > 0) { // Skip the hour column
                        cell.value = subjects[subjectIndex % subjects.length];
                        subjectIndex++;
                    }
                });
            });
        }

        function downloadPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            // Título del documento
            doc.setFontSize(18);
            doc.text("Horario Asignado", 10, 10);

            // Obtener datos de la tabla
            const table = document.querySelector("#scheduleTable");
            const rows = Array.from(table.querySelectorAll("tr"));

            let y = 20;
            rows.forEach((row, index) => {
                const cols = Array.from(row.querySelectorAll("th, td"));
                let x = 10;

                cols.forEach(col => {
                    const text = col.textContent || col.innerText;
                    doc.text(text, x, y);
                    x += 40; // Ancho de la columna
                });

                y += 10; // Altura de la fila
                if (y > 270) {
                    y = 20;
                    doc.addPage();
                }
            });

            doc.save('horario_asignado.pdf');
        }

        function updateScheduleView() {
            const scheduleTable = document.querySelector("#scheduleTable");
            const scheduleViewBody = document.querySelector("#scheduleViewBody");

            const rows = Array.from(scheduleTable.querySelectorAll("tbody tr"));

            scheduleViewBody.innerHTML = ''; // Limpiar vista actual

            rows.forEach(row => {
                const cells = Array.from(row.querySelectorAll("td"));
                const rowHTML = `
                            <tr>
                                ${cells.map(cell => `<td>${cell.querySelector('input').value}</td>`).join('')}
                            </tr>
                        `;
                scheduleViewBody.insertAdjacentHTML('beforeend', rowHTML);
            });
        }

        // Mostrar la fecha y hora actuales
        function updateDateTime() {
            const now = new Date();
            const dateString = now.toLocaleDateString('es-ES');
            const timeString = now.toLocaleTimeString('es-ES');
            document.getElementById('currentDateTime').textContent = `${dateString} ${timeString}`;
        }

        setInterval(updateDateTime, 1000); // Actualizar cada segundo

        function goToLogin() {
            window.location.href = '/Account/Logout';
        }
    </script>
</body>
</html>
