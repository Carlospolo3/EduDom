@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Sistema EDUDOM</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #F5F5F5;
            color: #333;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #046BCD;
            color: #FFFFFF;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.2);
            overflow-y: auto;
        }

            .sidebar .logo {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
                color: #FFFFFF;
            }

            .sidebar a {
                display: block;
                color: #FFFFFF;
                padding: 10px;
                text-decoration: none;
                font-size: 16px;
                border-radius: 4px;
                transition: background 0.3s ease, color 0.3s ease;
            }

                .sidebar a:hover {
                    background: #FFFFFF;
                    color: #046BCD;
                }

            .sidebar .btn-close {
                background-color: #FF4D4D;
                color: #FFFFFF;
                border: none;
                padding: 10px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 16px;
                text-align: center;
                transition: background-color 0.3s ease;
                margin-top: 20px;
            }

                .sidebar .btn-close:hover {
                    background-color: #CC0000;
                }

        .header {
            position: fixed;
            top: 0;
            left: 250px;
            width: calc(100% - 250px);
            background: #046BCD;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            z-index: 1000;
            color: #FFFFFF;
        }

            .header .logo {
                font-size: 24px;
                font-weight: bold;
            }

            .header .search-bar input {
                padding: 8px;
                border: 1px solid #D3D3D3;
                border-radius: 4px;
                width: 300px;
            }

            .header .notifications, .header .user-avatar, .header .date-time {
                margin-left: 20px;
            }

                .header .notifications .icon {
                    font-size: 20px;
                    color: #FFFFFF;
                }

                .header .user-avatar img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    border: 2px solid #FFFFFF;
                }

            .header .date-time {
                font-size: 16px;
            }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            padding-top: 80px;
        }

        .dashboard-card {
            background: #FFFFFF;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            margin-bottom: 20px;
        }

            .dashboard-card h2 {
                margin-bottom: 20px;
            }

        .stats {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

            .stats .card {
                flex: 1;
                min-width: 250px;
                margin: 10px;
                padding: 20px;
                background: #FFFFFF;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.2);
                text-align: center;
            }

                .stats .card h3 {
                    margin-bottom: 10px;
                    color: #046BCD;
                }

                .stats .card p {
                    font-size: 24px;
                    font-weight: bold;
                    color: #333;
                }

        .charts {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

            .charts .chart {
                flex: 1;
                min-width: 400px;
                margin: 10px;
                padding: 20px;
                background: #FFFFFF;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            }

        .progress-bar-container {
            margin: 10px 0;
        }

        .progress-bar {
            position: relative;
            height: 30px;
            background: #F3F3F3;
            border-radius: 5px;
            overflow: hidden;
        }

            .progress-bar .progress {
                position: absolute;
                height: 100%;
                background: #46C35F;
                line-height: 30px;
                color: #FFFFFF;
                text-align: center;
                transition: width 0.3s ease;
            }

    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">Sistema EDUDOM</div>
        <a href="/Home" class="nav-link"><i class="fas fa-home"></i>Inicio</a>
        <a href="/Profile" class="nav-link"><i class="fas fa-user"></i>Perfil</a>
        <a href="/Assignment/Index" class="nav-link"><i class="fas fa-tasks"></i>Tareas</a>
        <a href="/Cours/Index" class="nav-link"><i class="fas fa-chalkboard-teacher"></i>Aulas</a>
        <a href="/Qualifications/Index" class="nav-link"><i class="fas fa-star"></i>Calificaciones</a>
        <a href="/Attendance/Index" class="nav-link"><i class="fas fa-user-check"></i>Registro de Asistencia</a>
        <a href="/Reports/Index" class="nav-link"><i class="fas fa-chart-line"></i>Informe de Progreso</a>
        <a href="/Employeer/Index" class="nav-link"><i class="fas fa-users"></i>Empleados</a>
        <a href="/Department/Index" class="nav-link"><i class="fas fa-building"></i>Departamentos</a>
        <a href="/Distric/Index" class="nav-link"><i class="fas fa-map-marker-alt"></i>Distritos</a>
        <a href="/Province/Index" class="nav-link"><i class="fas fa-globe"></i>Provincias</a>
        <a href="/School/Index" class="nav-link"><i class="fas fa-school"></i>Escuelas</a>
        <a href="/Subject/Index" class="nav-link"><i class="fas fa-book"></i>Asignaturas</a>
        <a href="/Schedule" class="nav-link"><i class="fas fa-calendar-alt"></i>Horario</a>
        <a href="/Messages" class="nav-link"><i class="fas fa-envelope"></i>Mensajes</a>
        <a href="Home/Supports" class="nav-link"><i class="fas fa-life-ring"></i>Soporte</a>
        <button class="btn-close" onclick="goToLogin()">Cerrar Sección</button>
    </div>
    <div class="header">
        <div class="logo">Sistema EDUDOM</div>
        <div class="search-bar">
            <input type="text" placeholder="Buscar...">
        </div>
        <div class="notifications">
            <i class="fas fa-bell icon"></i>
        </div>
        <div class="user-avatar">
            <img src="https://i.imgur.com/QwhZRyL.png" alt="Avatar">
        </div>
        <div class="date-time">
            <span id="currentDateTime"></span>
        </div>
    </div>
    <div class="main-content">
        <div class="dashboard-card">
            <h2>Dashboard de Estadísticas</h2>
            <div class="stats">
                <div class="card">
                    <h3>Cantidad de Escuelas</h3>
                    <p id="schoolCount">--</p>
                </div>
                <div class="card">
                    <h3>Cantidad de Estudiantes</h3>
                    <p id="studentCount">--</p>
                </div>
                <div class="card">
                    <h3>Cantidad de Profesores</h3>
                    <p id="teacherCount">--</p>
                </div>
                <div class="card">
                    <h3>Promedio de Asistencias</h3>
                    <p id="attendanceAvg">--%</p>
                    <div class="progress-bar-container">
                        <div class="progress-bar">
                            <div class="progress" id="attendanceProgress">--%</div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <h3>Promedio de Inasistencias</h3>
                    <p id="absenceAvg">--%</p>
                    <div class="progress-bar-container">
                        <div class="progress-bar">
                            <div class="progress" id="absenceProgress">--%</div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <h3>Promedio de Estudiantes Aprobados</h3>
                    <p id="passRate">--%</p>
                </div>
                <div class="card">
                    <h3>Promedio de Estudiantes Reprobados</h3>
                    <p id="failRate">--%</p>
                </div>
            </div>
            <div class="charts">
                <div class="chart">
                    <h3>Distribución de Estudiantes Aprobados y Reprobados</h3>
                    <canvas id="passFailChart"></canvas>
                </div>
                <div class="chart">
                    <h3>Promedio de Asistencias e Inasistencias por Escuela</h3>
                    <canvas id="attendanceAbsenceChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var currentDateTime = new Date().toLocaleString('es-ES', { dateStyle: 'full', timeStyle: 'short' });
            document.getElementById('currentDateTime').textContent = currentDateTime;

            // Datos simulados (debes reemplazarlos con los datos reales de tu aplicación)
            var schoolCount = 10;
            var studentCount = 500;
            var teacherCount = 30;
            var attendanceAvg = 85;
            var absenceAvg = 10;
            var passRate = 75;
            var failRate = 25;

            // Actualizar los elementos con los datos simulados
            document.getElementById('schoolCount').textContent = schoolCount;
            document.getElementById('studentCount').textContent = studentCount;
            document.getElementById('teacherCount').textContent = teacherCount;
            document.getElementById('attendanceAvg').textContent = attendanceAvg + '%';
            document.getElementById('absenceAvg').textContent = absenceAvg + '%';
            document.getElementById('passRate').textContent = passRate + '%';
            document.getElementById('failRate').textContent = failRate + '%';
            document.getElementById('attendanceProgress').textContent = attendanceAvg + '%';
            document.getElementById('absenceProgress').textContent = absenceAvg + '%';

            // Gráfica de pastel
            var ctxPassFail = document.getElementById('passFailChart').getContext('2d');
            new Chart(ctxPassFail, {
                type: 'pie',
                data: {
                    labels: ['Aprobados', 'Reprobados'],
                    datasets: [{
                        label: 'Distribución de Estudiantes',
                        data: [passRate, failRate],
                        backgroundColor: ['#4CAF50', '#F44336']
                    }]
                }
            });

            // Gráfica de barras
            var ctxAttendanceAbsence = document.getElementById('attendanceAbsenceChart').getContext('2d');
            new Chart(ctxAttendanceAbsence, {
                type: 'bar',
                data: {
                    labels: ['Asistencias', 'Inasistencias'],
                    datasets: [{
                        label: 'Promedio',
                        data: [attendanceAvg, 100 - attendanceAvg],
                        backgroundColor: ['#46C35F', '#F44336']
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });

        function goToLogin() {
            window.location.href = '/Account/Logout';
        }
    </script>
</body>
</html>
